class Customer         
{
	String custName, DOB, gender, address, finalcustomID, finaltickID;
	long customID;
	int phoneNum, date, inp, num,d;
}   
class Ticket
{   
	int numofticks,inp;       
	String traveldate;
	int cost = 2000;
	String source= "Chennai";
	int totalcost;
	String destin = "Bangalore";
	double custID;
	String inptickNum;
}
